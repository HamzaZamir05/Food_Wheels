<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_info"
    android:layout_width="match_parent"
    android:background="#fcf9ea"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hamzazamir.food_wheels.AccountInfo">

    <EditText
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="41dp"
        android:id="@+id/update_name"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_mail_black_24dp"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/update_email"
        android:hint="E-mail"
        android:layout_below="@+id/update_name"
        android:layout_alignStart="@+id/update_name"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person_pin_black_24dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/update_addr"
        android:hint="Address"
        android:layout_below="@+id/update_pass"
        android:layout_alignStart="@+id/update_pass"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:id="@+id/update_pass"
        android:hint="Password"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/update_cont"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:id="@+id/update_cont"
        android:hint="Contact #"
        android:layout_above="@+id/update_pass"
        android:layout_alignStart="@+id/update_email"
        android:layout_marginBottom="15dp"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic" />

    <TextView
        android:text="UPDATE DATA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="24sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|bold"
        android:textAllCaps="true" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_btn"
        android:typeface="sans"
        style="@android:style/Widget.Button"
        android:textSize="14sp"
        android:textStyle="normal|bold|italic"
        android:lineSpacingExtra="36sp"
        android:fontFamily="serif"
        android:layout_alignBaseline="@+id/logout"
        android:layout_alignBottom="@+id/logout"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:typeface="sans"
        style="@android:style/Widget.Button"
        android:textSize="14sp"
        android:lineSpacingExtra="36sp"
        android:fontFamily="serif"
        android:textStyle="normal|bold|italic"
        android:layout_marginTop="24dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/update_addr"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:elevation="0dp" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_acc"
        style="@android:style/Widget.Button"
        android:fontFamily="serif"
        android:typeface="serif"
        android:textSize="14sp"
        android:lineSpacingExtra="36sp"
        android:textStyle="normal|bold|italic"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/update_btn"
        android:layout_alignBottom="@+id/update_btn"
        android:layout_toEndOf="@+id/update_btn"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:typeface="sans"
        style="@android:style/Widget.Button"
        android:textSize="14sp"
        android:textStyle="normal|bold|italic"
        android:lineSpacingExtra="36sp"
        android:fontFamily="serif"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:text="Add item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addItem"
        android:typeface="sans"
        style="@android:style/Widget.Button"
        android:textSize="14sp"
        android:textStyle="normal|bold|italic"
        android:lineSpacingExtra="36sp"
        android:fontFamily="serif"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/menu"
        android:layout_marginStart="13dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background" />


</RelativeLayout>
