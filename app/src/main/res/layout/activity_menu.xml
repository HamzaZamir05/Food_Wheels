<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hamzazamir.food_wheels.Menu">


    <TextView
        android:text="MANAGE MENU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="24sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|bold"
        android:textAllCaps="true" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_item"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="47dp"
        android:typeface="sans"
        style="@android:style/Widget.Button"
        android:textSize="14sp"
        android:lineSpacingExtra="36sp"
        android:fontFamily="serif"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_item"
        android:typeface="sans"
        style="@android:style/Widget.Button"
        android:textSize="14sp"
        android:textStyle="normal|bold|italic"
        android:lineSpacingExtra="36sp"
        android:fontFamily="serif"
        android:layout_alignBaseline="@+id/add_item"
        android:layout_alignBottom="@+id/add_item"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_item"
        android:layout_alignTop="@+id/update_item"
        android:layout_toEndOf="@+id/update_item"
        android:layout_marginStart="21dp"
        style="@android:style/Widget.Button"
        android:fontFamily="serif"
        android:typeface="serif"
        android:textSize="14sp"
        android:lineSpacingExtra="36sp"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:drawableLeft="@drawable/ic_local_dining_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/item_name"
        android:hint="Item name"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:drawableLeft="@drawable/ic_help_outline_black_24dp"
        android:ems="10"
        android:id="@+id/item_des"
        android:hint="item Description"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic"
        android:layout_below="@+id/item_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:drawableLeft="@drawable/ic_control_point_black_24dp"
        android:id="@+id/item_quan"
        android:hint="Item Quantity"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic"
        android:layout_below="@+id/item_des"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:ems="10"
        android:id="@+id/item_price"
        android:hint="Item Price"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="16sp"
        android:lineSpacingExtra="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="normal|italic"
        android:layout_below="@+id/item_quan"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
