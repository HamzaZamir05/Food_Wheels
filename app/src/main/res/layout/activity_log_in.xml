<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hamzazamir.food_wheels.LogIn">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
  >
    <TextView
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:fontFamily="serif"
        android:textSize="24sp"
        android:lineSpacingExtra="36sp"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nothrow"
            android:id="@+id/imageView5"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            android:layout_marginBottom="61dp"
            android:fontFamily="serif"
            style="@android:style/Widget.Button"
            android:textStyle="normal|bold|italic"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp" />

        <EditText
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:ems="10"
            android:id="@+id/login_email"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif"
            android:textStyle="normal|italic"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_above="@+id/login_pass"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textSize="14sp"
            android:textStyle="normal|italic"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_above="@+id/login_btn"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Not A Member? Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NewMem"
            android:textSize="14sp"
            android:fontFamily="serif"
            android:textStyle="normal|italic"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_alignBaseline="@+id/login_btn"
            android:layout_alignBottom="@+id/login_btn"
            android:layout_alignParentStart="true" />

        <EditText
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/login_pass"
            android:fontFamily="serif"
            android:layout_marginBottom="46dp"
            android:textStyle="normal|italic"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_above="@+id/forgot"
            android:layout_alignStart="@+id/login_email" />
    </RelativeLayout>

</RelativeLayout>
